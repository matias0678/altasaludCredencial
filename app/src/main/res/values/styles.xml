<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/naranjaFuerte</item>
        <item name="android:fontFamily">@font/euphemia</item>


    </style>

    <style name="AppThemeLogin" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/euphemia</item>

    </style>

    <style name="AppThemeMostrar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/euphemia</item>


    </style>


    <style name="CredencialTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/euphemia</item>
    </style>

    <style name="CredencialEstadoTextStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center_vertical|end</item>
        <!-- Otros atributos según tus preferencias -->
    </style>

    <!-- Definición del estilo DropDownNav -->
    <style name="DropDownNav" parent="Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:popupBackground">@color/colorMenuBackground</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.LoginActivity" parent="AppTheme">
        <item name="android:background">@color/colorGris</item>
        <item name="windowActionBar">true</item> <!-- Agrega este atributo -->
    </style>

    <style name="MyCustomFontStyle">
        <item name="android:fontFamily">@font/myriadproregular</item>
    </style>



</resources>






